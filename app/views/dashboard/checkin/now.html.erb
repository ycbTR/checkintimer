<%= content_for :page_header do %>
    <h1><i class="icon-map-marker"></i>Check-in Yap</h1>
<% end %>

<div class="widget">
  <div class="col-md-12">

    <div class="widget-content-white glossed">
      <div class="padded">
        <%= form_for current_user, :url => dashboard_checkin_now_path, :method => :post do |f| %>

            <div class="form-group">
              <label>Mekan</label>
              <%= select_tag :venue_id, options_for_select(current_user.venues_for_select, params[:venue_id]), :class => "form-control" %>
            </div>

            <div class="form-group">
              <label>Söylemek İstediğin</label>
              <%= text_field_tag :shout, params[:shout], :class => "form-control" %>
            </div>

            <div class="form-group">
              <label>Göster</label><br>
              <label class="checkbox-inline">
                <%= check_box_tag("post_to_facebook", true) %> Facebook
              </label>
              <label class="checkbox-inline">
                <%= check_box_tag("post_to_twitter", true) %> Twitter
              </label>
              <label class="checkbox-inline">
                <%= check_box_tag("private", true) %> Gizli
              </label>
            </div>

            <button class="btn btn-primary">
              <i class="icon-map-marker"></i> Check-in Yap
            </button>
        <% end %>
      </div>
      <div class="col-md-6">
      </div>
    </div>
  </div>

</div>